<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:backgroundTintMode="src_in"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnAll"
        android:layout_width="125dp"
        android:layout_height="110dp"
        android:text="All\n companies"
        android:textSize="16dp"
        android:background="@drawable/button1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="75dp"
        android:textColor="#ffffff">
    </Button>

    <Button
        android:id="@+id/btnGroup"
        android:layout_width="145dp"
        android:layout_height="130dp"
        android:background="@drawable/button2"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="-140dp"
        android:textColor="#ffffff"
        android:textSize="14dp"
        android:text="Profit\n of the country">
    </Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp">
        <Button
            android:id="@+id/btnSort"
            android:background="@drawable/button3"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:textColor="#ffffff"
            android:layout_width="95dp"
            android:layout_height="80dp"
            android:text="Sort by">
        </Button>
        <RadioGroup
            android:id="@+id/rgSort"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name">
            </RadioButton>
            <RadioButton
                android:id="@+id/rProfit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profit">
            </RadioButton>
            <RadioButton
                android:id="@+id/rCountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country">
            </RadioButton>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        <Button
            android:background="@drawable/button4"
            android:textColor="#ffffff"
            android:id="@+id/btnHaving"
            android:layout_marginLeft="40dp"
            android:textSize="13dp"
            android:layout_width="125dp"
            android:layout_height="110dp"
            android:text="Profit of\n the country >">
        </Button>
        <EditText
            android:id="@+id/etCountryProfit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:inputType="number">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <Button
            android:background="@drawable/button5"
            android:layout_width="115dp"
            android:layout_height="100dp"
            android:layout_marginLeft="95dp"
            android:textSize="14dp"
            android:textColor="#ffffff"
            android:id="@+id/btnProfit"
            android:text="Profit >">
        </Button>
        <EditText
            android:id="@+id/etProfit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:inputType="number">
        </EditText>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:scrollbars="vertical"
        android:id="@+id/textView"
        android:textColor="#fdffff"
        android:textSize="18dp" />

        <Button
            android:background="@drawable/button7"
            android:textColor="#ffffff"
            android:id="@+id/btnClear"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="40dp"
            android:textSize="23dp"
            android:layout_width="125dp"
            android:layout_height="110dp"
            android:text="Clear">
        </Button>
        <Button
            android:background="@drawable/button6"
            android:textColor="#ffffff"
            android:id="@+id/btnInf"
            android:layout_marginTop="-40dp"
            android:layout_marginLeft="170dp"
            android:textSize="14dp"
            android:layout_width="125dp"
            android:layout_height="110dp"
            android:text="About\ncompanies">
        </Button>

</LinearLayout>
</ScrollView>